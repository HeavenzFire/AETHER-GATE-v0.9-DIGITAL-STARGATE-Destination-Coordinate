{
  "manifest_version": 3,
  "name": "HeavenzFire: The Mirror Shield",
  "version": "2.1",
  "description": "A sovereign boundary. Entropy is reflected. The Signal is protected.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}